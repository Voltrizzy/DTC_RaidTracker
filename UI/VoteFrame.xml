<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/ ..\FrameXML\UI.xsd">

    <Frame name="DTC_VoteFrame" inherits="DTC_WindowTemplate" parent="UIParent" hidden="true">
        <Size x="400" y="450"/>
        <Anchors><Anchor point="CENTER"/></Anchors>
        
        <Layers>
            <Layer level="OVERLAY">
                <FontString parentKey="VotesLeft" inherits="GameFontNormalLarge">
                    <Anchors><Anchor point="BOTTOMRIGHT" x="-15" y="34"/></Anchors>
                </FontString>
            </Layer>
        </Layers>
        
        <Frames>
            <ScrollFrame parentKey="ListScroll" inherits="UIPanelScrollFrameTemplate">
                <Anchors>
                    <Anchor point="TOPLEFT" x="10" y="-30"/>
                    <Anchor point="BOTTOMRIGHT" x="-30" y="65"/> 
                </Anchors>
                <ScrollChild>
                    <Frame parentKey="Content"><Size x="300" y="1"/></Frame>
                </ScrollChild>
            </ScrollFrame>
            
            <Button parentKey="FinalizeBtn" inherits="UIPanelButtonTemplate" text="Finalize">
                <Size x="80" y="22"/>
                <Anchors><Anchor point="BOTTOMLEFT" x="5" y="32"/></Anchors>
            </Button>

            <Button parentKey="AnnounceBtn" inherits="UIPanelButtonTemplate" text="Announce">
                <Size x="80" y="22"/>
                <Anchors><Anchor point="LEFT" relativeKey="$parent.FinalizeBtn" relativePoint="RIGHT" x="5" y="0"/></Anchors>
            </Button>
            
            <Button parentKey="PropBtn" inherits="UIPanelButtonTemplate" text="Proposition">
                <Size x="90" y="22"/>
                <Anchors><Anchor point="LEFT" relativeKey="$parent.AnnounceBtn" relativePoint="RIGHT" x="5" y="0"/></Anchors>
            </Button>

            <StatusBar parentKey="TimerBar">
                <Size x="380" y="8"/>
                <Anchors><Anchor point="BOTTOM" x="0" y="10"/></Anchors>
                <Layers>
                    <Layer level="BACKGROUND">
                        <Texture setAllPoints="true">
                            <Color r="0.1" g="0.1" b="0.1" a="1"/>
                        </Texture>
                    </Layer>
                    <Layer level="ARTWORK">
                        <Texture parentKey="BarTexture" setAllPoints="true">
                            <Color r="1" g="1" b="1"/>
                        </Texture>
                    </Layer>
                </Layers>
                <Scripts>
                    <OnLoad>
                        self:SetStatusBarTexture(self.BarTexture)
                        self:SetMinMaxValues(0, 1)
                        self:SetValue(1)
                    </OnLoad>
                </Scripts>
            </StatusBar>
        </Frames>
    </Frame>
</Ui>
