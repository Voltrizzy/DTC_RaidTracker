<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/
..\FrameXML\UI.xsd">

    <Frame name="DTC_VoteFrame" inherits="DTC_WindowTemplate" parent="UIParent" hidden="true">
        <Size x="400" y="520"/>
        <Anchors>
            <Anchor point="CENTER"/>
        </Anchors>
        <Frames>
            <Frame parentKey="Inset" inherits="InsetFrameTemplate">
                <Anchors>
                    <Anchor point="TOPLEFT" x="4" y="-60"/>
                    <Anchor point="BOTTOMRIGHT" x="-6" y="60"/>
                </Anchors>
            </Frame>

            <ScrollFrame parentKey="ListScroll" inherits="UIPanelScrollFrameTemplate">
                <Anchors>
                    <Anchor point="TOPLEFT" relativeKey="$parent.Inset" relativePoint="TOPLEFT" x="5" y="-5"/>
                    <Anchor point="BOTTOMRIGHT" relativeKey="$parent.Inset" relativePoint="BOTTOMRIGHT" x="-25" y="5"/>
                </Anchors>
                <ScrollChild>
                    <Frame parentKey="Content">
                        <Size x="330" y="1"/>
                    </Frame>
                </ScrollChild>
            </ScrollFrame>

            <Button parentKey="FinalizeBtn" inherits="UIPanelButtonTemplate" text="Finalize">
                <Size x="80" y="24"/>
                <Anchors><Anchor point="LEFT" relativePoint="BOTTOMLEFT" x="10" y="44"/></Anchors>
            </Button>

            <Button parentKey="AnnounceBtn" inherits="UIPanelButtonTemplate" text="Announce">
                <Size x="80" y="24"/>
                <Anchors><Anchor point="LEFT" relativeKey="$parent.FinalizeBtn" relativePoint="RIGHT" x="5" y="0"/></Anchors>
            </Button>
            
            <Button parentKey="PropBtn" inherits="UIPanelButtonTemplate" text="Proposition">
                <Size x="100" y="24"/>
                <Anchors><Anchor point="LEFT" relativeKey="$parent.AnnounceBtn" relativePoint="RIGHT" x="5" y="0"/></Anchors>
            </Button>
        </Frames>
        
        <Layers>
            <Layer level="OVERLAY">
                <FontString parentKey="VotesLeft" inherits="GameFontNormalLarge" justifyH="RIGHT">
                    <Anchors>
                        <Anchor point="RIGHT" relativePoint="BOTTOMRIGHT" x="-25" y="44"/>
                    </Anchors>
                </FontString>
            </Layer>
        </Layers>
    </Frame>


</Ui>
