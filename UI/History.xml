<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/ ..\FrameXML\UI.xsd">

    <Frame name="DTC_HistoryFrame" inherits="DTC_WindowTemplate" parent="UIParent" hidden="true">
        <Size x="850" y="500"/>
        <Anchors>
            <Anchor point="CENTER"/>
        </Anchors>
        <Frames>
            <Frame parentKey="DateDD" inherits="UIDropDownMenuTemplate">
                <Anchors>
                    <Anchor point="TOPLEFT" x="-5" y="-30"/>
                </Anchors>
            </Frame>

            <Frame parentKey="NameDD" inherits="UIDropDownMenuTemplate">
                <Anchors>
                    <Anchor point="LEFT" relativeKey="$parent.DateDD" relativePoint="RIGHT" x="0" y="0"/>
                </Anchors>
            </Frame>
            
            <Button parentKey="ExportBtn" inherits="UIPanelButtonTemplate" text="Export CSV">
                <Size x="120" y="24"/>
                <Anchors>
                    <Anchor point="TOPRIGHT" x="-15" y="-32"/>
                </Anchors>
            </Button>

            <ScrollFrame parentKey="ListScroll" inherits="UIPanelScrollFrameTemplate">
                <Anchors>
                    <Anchor point="TOPLEFT" x="15" y="-80"/>
                    <Anchor point="BOTTOMRIGHT" x="-35" y="15"/>
                </Anchors>
                <ScrollChild>
                    <Frame parentKey="Content">
                        <Size x="800" y="1"/>
                    </Frame>
                </ScrollChild>
            </ScrollFrame>
        </Frames>
    </Frame>

</Ui>